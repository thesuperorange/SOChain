{
  "name": "cert-api",
  "version": "0.0.1",
  "description": "cert api for HRRP system",
  "author": "superorange",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:chain": "run-p start:devchain start",
    "start:dev": "nodemon",
    "start:dev-chain": "run-p start:devchain start:dev",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "rm:db": "shx rm -f mydb.sqlite",
    "start:devchain": "ganache-cli -p 8546 -m 'tell sibling misery still crew globe flip leopard mosquito silk west gesture' >/dev/null",
    "start:devchain-cht": "ganache-cli -p 8546 -m '卡 領 填 訂 思 勸 批 豬 瓦 桿 嫂 軍'",
    "wait-tcp:8546": "wait-on -d 1000 tcp:8546",
    "wait-tcp:3000": "wait-on -d 1000 tcp:3000",
    "start:wait-chain-on": "run-s wait-tcp:8546 start",
    "start:chain-api": "run-p start:devchain start:wait-chain-on",
    "test:e2e-wait-api": "run-s wait-tcp:3000 test:e2e",
    "test:start-chain-api": "run-p start:chain-api test:e2e-wait-api",
    "test:all": "run-s rm:db test:start-chain-api",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e-only-initial": "jest 'initial.e2e' --runInBand --config ./test/jest-e2e.json",
    "test:e2e-only-ipfs": "jest 'ipfs.e2e' --runInBand --config ./test/jest-e2e.json",
    "test:e2e": "jest certtest.e2e --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@types/passport-jwt": "^3.0.1",
    "bitcoinjs-lib": "^4.0.2",
    "crypto-js": "^3.1.9-1",
    "install": "^0.12.2",
    "jsjws": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "jwa": "^1.1.6",
    "jwt-js": "^0.5.0",
    "key-encoder": "^1.1.6",
    "npm": "^6.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "sqlite-sync": "^0.3.8",
    "sqlite3": "^4.0.3",
    "truffle-hdwallet-provider": "0.0.3",
    "typescript": "^3.0.1",
    "web3-eth-personal": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
